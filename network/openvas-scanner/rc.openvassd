#!/bin/sh

PIDFILE="/var/run/openvassd.pid"

start() {
  echo "Starting OpenVAS scanner..."
  openvassd
}

stop() {
  echo "Stopping OpenVAS scanner..."
  kill `cat $PIDFILE`
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    stop
    sleep 1
    start
    ;;
  *)
    echo "Usage: $0 (start|stop|restart)"
esac
